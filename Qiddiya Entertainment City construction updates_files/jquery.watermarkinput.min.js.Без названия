(function(a){var b=new Array();a.Watermark={ShowAll:function(){for(var c=0;c<b.length;c++){if(b[c].obj.val()==""){b[c].obj.val(b[c].text);b[c].obj.css("color",b[c].WatermarkColor)}else{b[c].obj.css("color",b[c].DefaultColor)}}},HideAll:function(){for(var c=0;c<b.length;c++){if(b[c].obj.val()==b[c].text){b[c].obj.val("")}}}};a.fn.Watermark=function(d,c){if(!c){c="#cccccc"}return this.each(function(){var g=a(this);var f=g.css("color");b[b.length]={text:d,obj:g,DefaultColor:f,WatermarkColor:c};function h(){if(g.val()==d){g.val("")}g.css("color",f)}function e(){if(g.val().length==0||g.val()==d){g.val(d);g.css("color",c)}else{g.css("color",f)}}g.focus(h);g.blur(e);g.change(e);e()})}})(jQuery);